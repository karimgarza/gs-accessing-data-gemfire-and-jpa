<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE cache PUBLIC "-//GemStone Systems, Inc.//GemFire Declarative Cache 7.0//EN" "http://www.gemstone.com/dtd/cache7_0.dtd">
<cache lock-lease="120" lock-timeout="60" search-timeout="300"
       is-server="true" copy-on-read="false">      
    <cache-server max-connections="20" />               
        <region name="Customer">
            <region-attributes data-policy="replicate"
                               statistics-enabled="true"
                               >
                <entry-idle-time>
                    <expiration-attributes timeout="3000" action="destroy" />
                </entry-idle-time>
            </region-attributes>
        </region>                
</cache>

